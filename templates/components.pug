mixin post-card(item)
  .post-card
    header
      .post-card__top
        span.post-card__icon.material-icons-outlined description
        .post-card__links
          a(href=item.link target="_blank").fas.fa-external-link-alt
      a(href=item.link target="_blank").post-card__title
        h3 #{item.title}
      .post-card__desc
        p #{item.desc}
    footer
      ul.post-card__tag-list
        each tag in item.tags
          li.post-card__tag #{tag}

mixin carousel(items)
  .carousel
    ul.carousel__content
      each item, index in items
        if index === 0
          li.carousel__item.carousel__item--active
            +post-card(item)
        else
          li.carousel__item
            +post-card(item)

mixin form
  form.form(name="contact" method="POST" data-netlify="true")
    input(type="hidden" name="form-name" value="contact")
    .form__info
      .form__item
        label(for="name")
          i.material-icons-outlined person
        input(type="text" name="name" id="name" required placeholder="¿Cual es tu nombre?")
      .form__item
        label(for="email")
          i.material-icons-outlined email
        input(type="email" name="email" id="email" required placeholder="¿Cual es tu correo?")
    .form__item
      label(for="message")
      textarea(name="", cols="30", rows="5" required placeholder="Dime que opinas de mi trabajo")
    input(type="submit" value="Hablemos").btn
