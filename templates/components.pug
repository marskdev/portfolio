mixin social-nav(items)
  ul.social-nav
    each item in items
      li.social-nav__item
        a.social-nav__link(href=item.link target="_blank")
          i.fab(class=item.icon)

mixin navbar(items)
  ul.navbar
    li.navbar__item.navbar__item--position
      button(type="button")#navbar-toggler.navbar__toggler.navbar__toggler--collapsed.navbar__link
        i.navbar__toggler-icon.navbar__toggler-icon-menu
    each item in items
      li.navbar__item
        a.navbar__link(href=item.link class=item.class)
          i.material-icons.navbar__icon #{item.icon}
          span.navbar__text #{item.title}

mixin list(items)
  ul.skills__list.list
    each item in items
      li.list__item #{item}

mixin tag-list(items)
  ul.tag-list
    each item in items
      li.tag-list__item
        i.tag-list__icon(class=item.class)
        span.tag-list__text #{item.title}

mixin category-list(items)
  ul.category-list
    each item, index in items
      if index === 0
        li.category-list__item
          button.category-list__button.category-list__button--active #{item}
      else
        li.category-list__item
          button.category-list__button #{item}

mixin project(item)
  .project
    .project__cover
      a(href=item.links[item.links.length-1].link target="_blank")
        picture
          img(src=item.cover, alt=item.alt)
    .project__content
      a(href=item.links[1].link target="_blank").project__title
        h3 #{item.title}
      p.project__desc #{item.desc}
      ul.project__tech-list
        each tech in item.techs
          li #{tech}
      ul.project__link-list
        each link in item.links
          li.project__link-item
            a.project__link(href=link.link target="_blank")
              i.project__icon(class=link.icon)

